include ../mixins/flash-messages

doctype html
html

	//- HTML HEADER
	head
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")

		title= title || 'UJ Hydrogen Innovation Society'
		link(rel="shortcut icon", href="/favicon.ico", type="image/x-icon")

		//- Customise the stylesheet for your site by editing /public/styles/site.sass
		link(href="/styles/site.css", rel="stylesheet")

		//- This file provides the default styling for the KeystoneJS Content Editor
		if user && user.canAccessKeystone
			link(href="/keystone/styles/content/editor.min.css", rel="stylesheet")

		//- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
		//- Safely remove this block if you are not targeting IE8
		//-[if lt IE 9]
			script(src="//cdn.jsdelivr.net/html5shiv/3.7.3/html5shiv.js")
			script(src="//cdn.jsdelivr.net/respond/1.4.2/respond.min.js")
		//-[endif]
		//- Include template-specific stylesheets by extending the css block
		block css
			link(rel='icon', href='favicon.ico')
			link(href='https://fonts.googleapis.com/css?family=Raleway', rel='stylesheet')
			link(rel='stylesheet', href='/styles/style.css', type='text/css')
			link(rel='stylesheet', href='/styles/sponsor.css', type='text/css')
			link(rel='stylesheet', href='/styles/control-sizes.css', type='text/css')
			link(rel='stylesheet', href='https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css')
			link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', rel='stylesheet', type='text/css')

		//- Add any other template-specific HEAD tags by extending the head block
		block head

	//- HTML BODY
	body

		//- HEADER
		#header: .container

			//- Customise your site's navigation by changing the navLinks Array in ./routes/middleware.js
			//- ... or completely change this header to suit your design.
			div(role="navigation", style="border-bottom: 1px solid #0D8FFF;").navbar.navbar-default.navbar-fixed-top
				.container-fluid
					.navbar-header
						button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar', style='margin-top: 5px;height:40px;')
									span.sr-only Toggle navigation
									span#first_bar.icon-bar(style='background-color:black;')
									span#second_bar.icon-bar(style='background-color:black;')
									span#third_bar.icon-bar(style='background-color:black;')
						|
						a.navbar-brand(href='#')
							img(style='margin-top:-15px;width:50px;height:50px;', src='/images/logo.svg')
					#navbar.collapse.navbar-collapse
						ul.nav.navbar-nav.navbar-left
							each link in navLinks
								li(class=(section == link.key ? 'active' : null)): a(href=link.href)= link.label
						ul.nav.navbar-nav.navbar-right
							li: a(href='/login') Log in
							//- button.btn.btn-default(style='margin-top:5px', onclick='showLogin()')
							li: a(href='/signup') Sign up
							//- button.btn.btn-default(style='margin-top:5px;margin-left:5px;',onclick='showSignup()')

		//- BODY
		#body

			//- NOTE:
			//- There is no .container wrapping class around body blocks to allow more flexibility in design.
			//- Remember to include it in your templates when you override the intro and content blocks!
			//- The Intro block appears above flash messages (used for temporary information display)
			block intro

			//- Flash messages allow you to display once-off status messages to users, e.g. form
			//- validation errors, success messages, etc.
			+flash-messages(messages)

			//- The content block should contain the body of your template's content
			block content


		//- FOOTER
		.container: #footer
		.mastfoot
			.inner
			if user
				if user.canAccessKeystone
					a(style='margin-right:5px;', href='/keystone') | Open Keystone |
				a(href='/keystone/signout', style="margin-left:45px;") | Dashboard Sign Out |
			else
				a(href='/keystone/signin', style="margin-left:45px;") | Dashboard Sign In |
			p(style='color:#000;') &copy;2017,
				|
				a(href='http://uj.ac.za/')   University of Johannesburg
				|
			ul#social-link-container
				li
					a(href='')
						#lnk_face.social-link
				li
					a(href='')
						#lnk_twit.social-link
				li
					a(href='')
						#lnk_inst.social-link

			p(style="color:#000;")
				img(alt="coded", src='images/ic_code_black_48px.svg', style="width:25px;height:25px;")
				|  with
				img(alt="love", src='images/ic_favorite_black_48px.svg', style="width:25px;height:25px;")
				|  by
				a(href="http://casper.ndlovu.me", style="margin-left:10px;") Casper
				|  | Powered by <a href="http://keystonejs.com" target="_blank">KeystoneJS</a>.

			#dialog_signup.popup-dialog(title='Sign up')
				form.form(style='margin-top:5px;margin-left:auto;margin-right:auto;', ng-submit='register()', ng-controller='RegisterController')
					.form-group
						.row
							.col-lg-12.col-md-12.col-sm-12.col-xs-12
								.form_control_container
									.input-group.ig
										span#span_username.input-group-addon.form-text.ft-50 Username
										|
										input#username.form-control.fc-100(ng-model='username', type='text', placeholder='Enter your username.', aria-describedby='username', name='username')
									.input-group.ig
										span#span_email.form-text.input-group-addon.ft-30 Student number
										|
										input#student_number.form-control.fc-100(ng-model='student_number', type='text', placeholder='Enter your UJ student nr.', aria-describedby='student number', name='student_number')
										|
										span#span_email_default.form-text.input-group-addon.ft-30 @student.uj.ac.za
									.input-group.ig
										span#span_password.form-text.input-group-addon.ft-30 Password
										.fc-100
										input#passwd.form-control(ng-model='password', type='password', style='width:100%;z-index:0;', placeholder='Enter your password.', aria-describedby='password', name='passwd')
										|
										button(type='button', onclick="showHidePassword('passwd')", style='position:absolute;margin-left:-10.1%;margin-top:3px;width:10%;height:60%;background:none;border:none;')
											span#passwd_icon.glyphicon.glyphicon-eye-open
						div(style='width:150px;margin:auto;margin-top:30px;')
							button.btn.btn-success(type='submit', style='width:150px;height:50px;margin:auto;') sign up

			#dialog_login.popup-dialog(title='Log in')
				form.form(style='margin-top:5px;margin-left:auto;margin-right:auto;', ng-submit='login()', ng-controller='LoginController')
					.form-group
						.row
							.col-lg-12.col-md-12.col-sm-12.col-xs-12
								.form_control_container
									.input-group.ig
										span#span_username.form-text.input-group-addon.ft-30 Username
										|
										input#username.form-control.fc-100(ng-model='username', type='text', placeholder='Enter your username.', aria-describedby='username', name='username')
									.input-group.ig
										span#span_password.form-text.input-group-addon.ft-30 Password
										.fc-100
										input#passwd.form-control(ng-model='password', type='password', style='width:100%;z-index:0;', placeholder='Enter your password.', aria-describedby='password', name='passwd')
										|
										button(type='button', onclick="showHidePassword('passwd')", style='position:absolute;margin-left:-10.1%;margin-top:3px;width:10%;height:60%;background:none;border:none;')
											span#passwd_icon.glyphicon.glyphicon-eye-open
						div(style='width:150px;margin:auto;margin-top:30px;')
							button.btn.btn-success(type='submit', style='width:150px;height:50px;margin:auto;') login


